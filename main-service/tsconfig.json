{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "./build",

		"sourceMap": true,
		"sourceRoot": "/",

		"target": "ESNext",
		"lib": ["ESNext", "dom"],

		"types": ["node"],
		"typeRoots": ["node_modules/@types"],

		"paths": {
			"@boot/*": ["./boot/*"],
			"@component/*": ["./component/*"],
			"@constant/*": ["./constant/*"],
			"@configure/*": ["./configure/*"],
			"@connector/*": ["./connector/*"],
			"@data/*": ["./data/*"],
			"@event/*": ["./event/*"],
			"@global/*": ["./global/*"],
			"@library/*": ["./library/*"],
			"@sample/*": ["./sample/*"],
			"@setting/*": ["./setting/*"],
			"@service/*": ["./service/*"],
			"@utility/*": ["./utility/*"],
			"@view/*": ["./view/*"]
		}
	},

	"include": ["**/*.ts"],
	"exclude": ["node_modules", "build"]
}
