{
	"name": "main-service",
	"version": "0.0.0",
	"description": "SwissPine Technical Exam Main Service",
	"main": "index.ts",
	"engines": {
		"node": ">=20.13.1"
	},
	"scripts": {
		"postinstall": "npm run build",
		"build": "tsc && tsc-alias",
		"prestart": "npm run build:source",
		"start": "pm2 start ./build --name=main",
		"stop": "pm2 stop main",
		"restart": "npm run stop:service && pm2 flush && npm run start:service && pm2 logs --lines 1000"
	},
	"keywords": [
		"swisspine",
		"technical",
		"exam"
	],
	"author": "Richeve S. Bebedor <richeve.bebedor@gmail.com>",
	"contributors": [
		"Richeve S. Bebedor <richeve.bebedor@gmail.com>"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/dump-work/swisspine-exame.git"
	},
	"bugs": {
		"url": "https://github.com/dump-work/swisspine-exame/issues"
	},
	"homepage": "https://github.com/dump-work/swisspine-exame#readme",
	"dependencies": {
		"flat": "^6.0.1",
		"mongoose": "^8.4.1"
	}
}