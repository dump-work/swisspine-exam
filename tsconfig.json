{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./build",
		"sourceMap": true,
		"declaration": false,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"module": "es2020",
		"moduleResolution": "node",
		"importHelpers": true,
		"target": "es2020",
		"typeRoots": ["node_modules/@types"],
		"lib": ["es2020", "dom"],
		"types": ["node"],
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/*": ["./*"],
			"@boot/*": ["./boot/*"],
			"@component/*": ["./component/*"],
			"@constant/*": ["./constant/*"],
			"@configure/*": ["./configure/*"],
			"@connector/*": ["./connector/*"],
			"@dashboard/*": ["./app/dashboard/*"],
			"@data/*": ["./data/*"],
			"@event/*": ["./event/*"],
			"@global/*": ["./global/*"],
			"@library/*": ["./library/*"],
			"@sample/*": ["./sample/*"],
			"@setting/*": ["./setting/*"],
			"@service/*": ["./service/*"],
			"@type/*": ["./type/*"],
			"@utility/*": ["./utility/*"]
		}
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "build"]
}
